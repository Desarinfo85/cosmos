<div class="container">
    <div class="row profile">
        <div class="col-md-6">
            <h1>Mon profil</h1>
            <form action="/edit/profile/{{user.id}}" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nom</label>
                    <input type="text" class="form-control" 
                        placeholder="name" name="name" value="{{user.name}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Prenom</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="surname" name="surname"
                        value="{{user.surname}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">pseudo</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Pseudo" name="pseudo"
                        value="{{user.pseudo}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">email</label>
                    <input type="email" class="form-control" id="exampleInputPassword1" placeholder="email" name="email"
                        value="{{user.email}}">
                </div>
                <input class="form-control" type="hidden" name="userId" value={{user.id}}>
                <button type="submit" class="btn btn-primary" >Submit</button>
                 <a href="/admin"> <input type="button" class="btn btn-primary" value="Retour"> </a>
                
            </form>

        </div>
    </div>
</div>