<div class="container" style="margin-top: 8rem;">

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
        aria-selected="true">LES ARTICLES</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
        aria-selected="false">LES UTILISATEURS</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <div class="container">
        <div class="row admin">
          <div class="col-md-12 admin-articles">
            <div class="table-responsive">
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th>Articles</th>
                    <th>Titre</th>
                    <th>auteur</th>
                    <th>date</th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>

                  {{#each dbArticle }}

                  <tr>
                    <th>{{arNumber}}</th>
                    <td><a href="/articles/{{_id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{moment createDate format="DD-MM-YY"}}</td>
                    <td></td>
                    <td>
                      <a href="/articleDelete/{{_id}}"
                        onclick="return confirm('Voulez vous vraiment supprimer cet article ?');"><i
                          class="fas fa-trash-alt"></i></a>
                      <a href="/editArticles/{{_id}}"><i class="fas fa-pencil-alt"></i></a>


                      {{#if active}}
                      <a href="/postUnactive/{{_id}}"> <button type="button"
                          class="btn btn-danger">DÃ©sactiver</button></a>

                      {{else}}
                      <a href="/postActive/{{_id}}"><button type="button" class="btn btn-info">Activer</button></a>
                      {{/if}}
                    </td>
                  </tr>
                  {{/each}}

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <div class="container">
        <div class="row admin">
          <div class="col-md-12 admin-articles">
            <div class="table-responsive">
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th>Utilisateur</th>
                    <th>Nom</th>
                    <th>email</th>
                    <th>pseudo</th>
                    <th>surname</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  {{#each usr}}
                  <tr>
                    <th>{{lsNumber}}</th>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{pseudo}}</td>
                    <td>{{surname}}</td>
                    <td>
                      <a href="/userDelete/{{_id}}"
                        onclick="return confirm('Voulez vous vraiment supprimer cet utilisateur ?');"><i
                          class="fas fa-trash-alt"></i></a>
                      <a href="/editUser/{{_id}}"><i class="fas fa-pencil-alt"></i></a>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  