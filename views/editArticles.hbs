<div class="container">
  <div class="row col-md-12 add">
    <div class="col-md-6 col-sm-6 col-xs-12 ">
      <form action="/articles/edit/{{article.id}}" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label class="control-label" for="subject">
            Titre
          </label>
          <input class="form-control" type="text" name="title" value={{article.title}} />
        </div>
        <div class="form-group ">
          <label class="control-label " for="textarea">
            Contenu
          </label>
          {{!-- CKEDITOR --}}
          <textarea class="form-control" cols="40" name="content" rows="10">{{article.content}}
          </textarea>
                 <script>
                        CKEDITOR.replace( 'content' );
                        CKEDITOR.config.entities = false;
                        CKEDITOR.config.entities_latin = false;          
                </script>
        </div>
        <div class="form-group ">
          <label class="control-label " for="subject1">
            Auteur
          </label>
          <input class="form-control" type="text" name="author" value={{article.author}} />
        </div>
               <div class="form-group">
          <div>
            <button class="btn btn-primary " name="submit" type="submit">Envoyer</button>
           <a href="/admin"> <input type="button" class="btn btn-primary" value="Retour"> </a>
          </div>
        </div>
        <div>
          <label for="exampleFormControlFile1">choisir une image au format jpg</label>
          <input type="file" class="form-control-file" name="image" id="exampleFormControlFile1" value="{{image}}" required>
        </div>
    
         <input class="form-control" type="hidden" name="articleId" value={{article.id}}>
         <input class="form-control" type="hidden" name="deleteArticleId" value={{article.id}}>
      </form>
    </div>
  </div>
</div>